<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/csi_login"
    tools:context=".AdminAssignDOJ">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add DOJ for employee!"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_margin="15dp"
        android:textSize="25sp"
        android:id="@+id/adddoj_tv" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_bg"
        android:hint="Email"
        android:layout_below="@id/adddoj_tv"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        android:id="@+id/doj_email"
        />

    <TextView
        android:id="@+id/doj_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/doj_email"
        android:layout_margin="10dp"
        android:background="@drawable/email_bg"
        android:gravity="center|start|left"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Date"
        android:textColor="@color/hintColor"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assign_doj_bt"
        android:layout_below="@id/doj_date"
        android:textSize="18sp"
        android:layout_margin="15dp"
        android:background="@drawable/add_event_bt_bg"
        android:layout_centerHorizontal="true"
        android:text="Add DOJ"
        android:textColor="#000"
        android:padding="10dp"
        />
</RelativeLayout>