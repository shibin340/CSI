<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#efefef"
    tools:context=".UserData">


      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userinfo"
        android:textSize="22sp"
        android:textColor="#F5A132"
        android:padding="2dp"
        android:text="User's Info"
        android:textStyle="bold"
        android:gravity="center"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_user"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userinfo"
        android:src="@drawable/ic_person_black_24dp"
        app:civ_border_color="#ff3300"
        app:civ_border_width="3dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#ff3300"
        />
    <LinearLayout
        android:layout_below="@id/img_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="3dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userinfo"
                android:padding="2dp"
                android:text="Username: "
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/u_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userinfo"

                android:layout_toRightOf="@+id/user"
                android:padding="2dp"
                android:text="Empty"
                android:textColor="#C8313030"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/empid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Emp-id:"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/id_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Empty"
                android:textColor="#C8313030"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/u_txt"
                android:padding="2dp"
                android:text="Email:"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/e_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/u_txt"
                android:layout_toRightOf="@id/email"
                android:padding="2dp"
                android:text="Empty"
                android:textColor="#C8313030"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/e_txt"
                android:padding="2dp"
                android:text="D.O.B:"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/d_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/e_txt"
                android:layout_toRightOf="@id/dob"
                android:padding="2dp"
                android:text="Empty"
                android:textColor="#C8313030"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/phoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/d_txt"
                android:padding="2dp"
                android:text="Phone number:"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/p_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/d_txt"
                android:layout_toRightOf="@id/phoneno"
                android:padding="2dp"
                android:text="Empty"
                android:textColor="#C8313030"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>