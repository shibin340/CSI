<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    tools:context=".UserLogin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_heading"
        android:layout_marginTop="10dp"
        android:id="@+id/login_head"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/admin_tv"
            android:text="Admin Login"
            android:layout_gravity="end"
            android:padding="5dp"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/csi_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/csi_pune_logo"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="15dp"
            app:boxCornerRadiusBottomEnd="10dp">
            <EditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="0.5dp"
                android:ems="10"
                android:drawableLeft="@drawable/email_profile"
                android:padding="10dp"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp">

            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/pass_pic"
                android:layout_marginRight="15dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_forgot_password"
        android:text="FORGOT PASSWORD ?"
        android:layout_gravity="center"
            android:textStyle="bold"
        android:layout_marginBottom="15dp"
        />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:background="#FC5B28"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_in_bt"
                android:layout_above="@id/RLDontHaveAccount"
                android:text="Login"
                android:onClick="Login"
                android:textColor="#FAF8F9"
                android:shadowRadius="10"
                android:background="#FC5B28"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:id="@+id/RLDontHaveAccount">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dont_have_an_acc"
            android:textColor="#fff"
            android:textSize="19sp"
            android:text="Don't have an account?"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up_tv"
            android:onClick="moveToSignUp"
            android:layout_toRightOf="@+id/tv_dont_have_an_acc"
            android:background="@drawable/sign_in_tv"
            />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>