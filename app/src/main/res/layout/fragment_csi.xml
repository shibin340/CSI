<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CSIfragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
             <androidx.cardview.widget.CardView
                android:id="@+id/card_gal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 app:cardBackgroundColor="#E2186F"
                android:layout_margin="10dp"
                app:cardCornerRadius="7dp">

                <TextView
                    android:id="@+id/txt_gal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Gallery"
                    android:textColor="#DBD001"
                    android:textSize="21sp" />
              </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="15dp"
                app:cardMaxElevation="15dp"
                app:cardElevation="15dp"
                android:layout_below="@id/card_gal_text"
                android:layout_margin="7dp"
                app:cardCornerRadius="7dp">

                <com.smarteist.autoimageslider.SliderView

                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="275dp"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderCircularHandlerEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="3"
                    app:sliderStartAutoCycle="true" />

            </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="7dp"
        app:cardCornerRadius="7dp"
        android:layout_below="@id/card_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        android:id="@+id/card_hiring">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="#94C052">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/img_hiring"
                android:src="@drawable/hiring"
                android:scaleType="fitXY" />
            <TextView
                android:layout_below="@id/img_hiring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/txt1"
                android:textColor="#C40302"
                android:text="1.Java developer"
                />
            <TextView
                android:layout_below="@id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/txt2"
                android:textColor="#FCBC03"
                android:text="2.Web developer"
                />
            <TextView
                android:layout_below="@id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/txt3"
                android:textColor="#F57B11"

                android:text="3.Android developer"
                />
            <TextView
                android:layout_below="@id/txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/txt4"
                android:textColor="#34719F"
                android:text="4.Digital marketing executing"
                />
            <TextView
                android:layout_below="@id/txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/txt5"
                android:textColor="#0299CB"
                android:text="5.HR Executive"
                />
            <TextView
                android:layout_below="@id/txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/txt6"
                android:textColor="#B391DB"
                android:text="Employee Referral : hr@creditsystemindia.com"
                android:layout_marginBottom="7dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_service_text"
                    android:layout_width="match_parent"
                    android:layout_below="@id/card_hiring"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#E2186F"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="7dp">

                    <TextView
                        android:id="@+id/tvbday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="CSI Services"
                        android:textColor="#DBD001"
                        android:textSize="21sp" />
                 </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="7dp"
                app:cardCornerRadius="7dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/card_service_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_services">
                <ImageView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:id="@+id/img_services"
                    android:src="@drawable/services1"
                    android:layout_marginBottom="50dp"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>