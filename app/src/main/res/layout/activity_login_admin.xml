<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/csi_login"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_tv1"
        android:layout_alignParentLeft="true"
        android:text="Back to Login"
        android:padding="5dp"
        android:layout_below="@+id/admin_head"
        android:layout_margin="7dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_head"
        android:background="@drawable/admin_heading"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/csi_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/csi_pune_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/admin_tv1"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/email_et1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_above="@id/password_et1"
        android:layout_marginBottom="0.5dp"
        android:padding="10dp"
        android:background="@drawable/email_bg"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_et1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:layout_above="@id/sign_in_bt1"
        android:layout_marginBottom="0.5dp"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/email_bg"
        android:inputType="textPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_bt1"
        android:background="@drawable/sign_in_bt"
        android:layout_above="@id/tv_dont_have_an_acc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dont_have_an_acc"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="85dp"
        android:layout_marginBottom="38dp"
        />

</RelativeLayout>