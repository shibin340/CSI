<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/csi_login"
    tools:context=".AdminAssignTask">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add users task here!"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_margin="15dp"
        android:textSize="25sp"
        android:id="@+id/addtask_tv"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_bg"
        android:hint="Email"
        android:layout_below="@+id/addtask_tv"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        android:id="@+id/tsk_email"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_bg"
        android:hint="Enter new task"
        android:paddingLeft="10dp"
        android:layout_below="@id/tsk_email"
        android:layout_margin="10dp"
        android:id="@+id/tsk_detail"
        />

    <Button
        android:id="@+id/task_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tsk_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/add_event_bt_bg"
        android:padding="10dp"
        android:text="Assign task"
        android:textColor="#000"
        android:textSize="18sp"
        />
</RelativeLayout>